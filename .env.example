# Development Environment Configuration
# Copy this file to .env and update values as needed

# Python Environment
PYTHON_ENV=development
LOG_LEVEL=INFO

# Model Configuration
MODEL_CACHE_DIR=./cache/models
DATA_CACHE_DIR=./cache/data
CHECKPOINT_DIR=./checkpoints

# Training Configuration
DEVICE=auto  # auto, cpu, cuda, mps
BATCH_SIZE=32
MAX_EPOCHS=100
LEARNING_RATE=1e-4

# Continual Learning Settings
MAX_TASKS=50
KNOWLEDGE_RETENTION_THRESHOLD=0.9

# Monitoring & Observability
ENABLE_WANDB=false
WANDB_PROJECT=continual-tiny-transformer
WANDB_API_KEY=your-wandb-api-key

ENABLE_TENSORBOARD=true
TENSORBOARD_LOG_DIR=./logs

# Performance Monitoring
ENABLE_PROFILING=false
PROFILE_OUTPUT_DIR=./profiles

# Security & Compliance
ENABLE_SECURITY_CHECKS=true
TRUST_REMOTE_CODE=false

# Development Tools
ENABLE_DEBUG_MODE=false
PYTEST_VERBOSITY=1
COVERAGE_MIN_THRESHOLD=90

# API Configuration (if applicable)
API_HOST=localhost
API_PORT=8000
API_WORKERS=1

# Database Configuration (if needed for experiments)
DATABASE_URL=sqlite:///./experiments.db

# External Services
HF_DATASETS_CACHE=./cache/datasets
TORCH_HOME=./cache/torch

# Resource Limits
MAX_MEMORY_GB=16
MAX_CPU_CORES=8

# Experiment Tracking
EXPERIMENT_NAME=default
EXPERIMENT_VERSION=1.0.0
EXPERIMENT_TAGS=development,local