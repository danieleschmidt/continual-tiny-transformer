# Continual Tiny Transformer - Environment Configuration
# Copy this file to .env and configure your environment

# ============================================================================
# CORE CONFIGURATION
# ============================================================================

# Model Configuration
MODEL_NAME=distilbert-base-uncased
MODEL_CACHE_DIR=./cache/models
MAX_TASKS=50
DEVICE=auto  # auto, cpu, cuda, mps

# Training Configuration
LEARNING_RATE=2e-5
BATCH_SIZE=16
NUM_EPOCHS=3
WARMUP_STEPS=100
GRADIENT_CLIPPING=1.0

# ============================================================================
# PATHS AND STORAGE
# ============================================================================

# Output directories
OUTPUT_DIR=./outputs
CACHE_DIR=./cache
DATA_DIR=./data
LOGS_DIR=./logs

# Model checkpoints
CHECKPOINT_DIR=./checkpoints
BEST_MODEL_DIR=./models/best

# ============================================================================
# CONTINUAL LEARNING PARAMETERS
# ============================================================================

# Adaptation method: activation, prompt, adapter
ADAPTATION_METHOD=activation
FREEZE_BASE_MODEL=true

# Knowledge distillation
USE_KNOWLEDGE_DISTILLATION=true
KD_TEMPERATURE=4.0
KD_ALPHA=0.5

# Elastic Weight Consolidation
USE_EWC=true
EWC_LAMBDA=1000.0

# Memory replay
REPLAY_BUFFER_SIZE=1000
REPLAY_RATIO=0.2

# ============================================================================
# LOGGING AND MONITORING
# ============================================================================

# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_INTERVAL=100
EVAL_INTERVAL=500
SAVE_INTERVAL=1000

# Weights & Biases (optional)
WANDB_PROJECT=continual-tiny-transformer
WANDB_ENTITY=your-username
# WANDB_API_KEY=your-api-key

# TensorBoard
TENSORBOARD_LOG_DIR=./logs/tensorboard

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Development mode
DEBUG=false
SEED=42

# Performance
MIXED_PRECISION=true
GRADIENT_CHECKPOINTING=false
NUM_WORKERS=4

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Hugging Face Hub (optional)
# HF_TOKEN=your-hf-token
# HF_HUB_CACHE=./cache/huggingface

# Cloud storage (optional)
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket

# ============================================================================
# DATABASE AND CACHING
# ============================================================================

# Redis (optional for caching)
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your-password

# PostgreSQL (optional for metadata storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/continual_transformer

# ============================================================================
# TESTING AND VALIDATION
# ============================================================================

# Test configuration
TEST_BATCH_SIZE=8
TEST_MAX_SAMPLES=1000
VALIDATION_SPLIT=0.2

# Performance testing
BENCHMARK_TASKS=5
BENCHMARK_SAMPLES=10000

# ============================================================================
# SECURITY
# ============================================================================

# Secret key for any encryption needs
# SECRET_KEY=your-secret-key-here

# API keys and tokens should be kept secure
# Never commit actual values to version control