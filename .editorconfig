# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# TOML files  
[*.toml]
indent_size = 4

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# Configuration files
[*.{cfg,ini}]
indent_size = 4

# Docker files
[{Dockerfile,*.dockerfile}]
indent_size = 4

# Shell files
[*.sh]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab
indent_size = 4

# Jupyter notebooks
[*.ipynb]
indent_size = 2

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_size = 2